datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Tus modelos aqu√≠ (User y Order como discutimos)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Order {
  id          Int      @id @default(autoincrement())
  description String
  quantity    Int
  status      OrderStatus @default(EN_PREPARACION)
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

enum OrderStatus {
  EN_PREPARACION
  EN_CAMINO
  ENTREGADO
}